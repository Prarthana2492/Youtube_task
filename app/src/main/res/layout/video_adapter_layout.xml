<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff"
    android:layout_marginBottom="2dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginLeft="5dp"
        android:paddingTop="30dp"
        android:layout_marginTop="0dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="35">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_play_button" />

            <TextView
                android:id="@+id/loan_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="#000"
                android:textSize="16dp" />

            <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/bank_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatarmale"
                app:civ_border_color="#dcdcdc"
                app:civ_border_width="0.0dp" />-->

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="65">

            <TextView
                android:id="@+id/prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Amazing Agriculture "
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"
                android:textSize="16dp" />
            <!--
                            <TextView
                                android:id="@+id/quantity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/segoeui"
                                android:gravity="center_vertical"
                                android:text="Quantity : 1"
                                android:layout_marginLeft="5dp"
                                android:textSize="14dp" />
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/second_video_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Technolgy - "
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"

                    android:textColor="#000"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp" />


            </LinearLayout>
            <TextView
                android:id="@+id/shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Farming"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/shipping_iscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:text="18M Views . 2days ago"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="100"
        android:gravity="right"
        android:layout_marginHorizontal="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:gravity="center"
            android:layout_gravity="center"
            >



            <!--<TextView
                android:id="@+id/quant_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="10"
                android:paddingVertical="5dp"
                android:textColor="#000"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:drawableRight="@drawable/ic_down_arrow"
                android:textSize="14dp" />-->

        </LinearLayout>





    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="20dp"
        android:background="#dcdcdc" />

</LinearLayout>

